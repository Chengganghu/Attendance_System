<Window x:Class="WpfApp10.Delete"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp10"
        mc:Ignorable="d"
        Title="Delete" Height="225" Width="300">
    <Grid>
        <TextBox x:Name="Id" HorizontalAlignment="Left" Height="23" Margin="128,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="36,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="62" TextAlignment="Right" Height="23"><Run Text="Id"/><Run Text=":"/></TextBlock>
        <Button x:Name="Delete_Button" Content="Delete" HorizontalAlignment="Left" Margin="110,123,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="36,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="62" TextAlignment="Right" Height="23"><Run Text="Name"/><Run Text=":"/></TextBlock>
        <TextBox x:Name="Name" HorizontalAlignment="Left" Height="23" Margin="128,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
